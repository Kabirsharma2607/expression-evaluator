# Environment Variables Template for Expression Evaluator
# Copy this to .env and fill in your actual values

# =============================================================================
# S3 Configuration (matches s3.policy prefix in S3Properties)
# =============================================================================
S3_POLICY_ENABLED=true
S3_POLICY_BUCKET_NAME=expression-evaluator-policies
S3_POLICY_REGION=ap-south-1
S3_POLICY_PREFIX=policies/
S3_POLICY_USE_DEFAULT_CREDENTIALS=false
S3_POLICY_ACCESS_KEY=your-aws-access-key
S3_POLICY_SECRET_KEY=your-aws-secret-key
S3_POLICY_CONNECTION_TIMEOUT_MS=30000
S3_POLICY_READ_TIMEOUT_MS=30000
S3_POLICY_MAX_RETRIES=3
S3_POLICY_ENABLE_FALLBACK=true

# =============================================================================
# Spring Boot Configuration
# =============================================================================
SPRING_PROFILES_ACTIVE=production
SERVER_PORT=8080

# =============================================================================
# JVM Configuration
# =============================================================================
JAVA_OPTS=-Xmx512m -Xms256m

# =============================================================================
# Application Configuration
# =============================================================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE=DEBUG